<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="peserta_inherit_view_tree" model="ir.ui.view">
        <field name="name">peserta_view_tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="after">
                <field name="kategori_pilihan"/>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="string">No Telepon yakk!!!</attribute>
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="peserta_inherit_view_form" model="ir.ui.view">
        <field name="name">peserta_inherit_view_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="kategori_pilihan"/>
                <field name="is_tutor"/>
            </xpath>
        </field>
    </record>

    <record id="peserta_action" model="ir.actions.act_window">
        <field name="name">peserta kursus</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="peserta_menu_categ"
              name="Data peserta Kursus"
              parent="kursusku_root"
              action="peserta_action"
              sequence="40"/>
</odoo>